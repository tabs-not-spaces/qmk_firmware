{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup",
            "type":"shell",
            "command": ["qmk setup ${env:KEYMAP}/qmk_firmware -y"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Compile (Preonic | default)",
            "type": "shell",
            "command": ["qmk compile -kb ${KEYBOARD} -km default"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
